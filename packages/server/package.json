    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/ssh2": "^1.11.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.0.0",
    "supertest": "^6.3.3",
    "tsc-alias": "^1.8.8",
