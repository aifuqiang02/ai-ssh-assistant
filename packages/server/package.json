    "@fastify/rate-limit": "^9.0.1",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.2",
    "fastify": "^4.24.3",
    "fs-extra": "^11.2.0",
    "ioredis": "^5.3.2",
