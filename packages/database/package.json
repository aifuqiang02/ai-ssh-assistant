{
  "name": "@ai-ssh/database",
  "version": "1.0.0",
  "description": "AI SSH Assistant Database Layer",
  "main": "dist/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:format": "prisma format",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@ai-ssh/shared": "workspace:*",
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "prisma": "^5.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}